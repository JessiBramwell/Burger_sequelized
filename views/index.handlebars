<div class="col-12">

  <form class="add-form_restaurant form-inline">
    <div class="form-group mb-2">
      <input class="form-control" type="text" name="rest_name" id="rest_name" placeholder="Restaurant Name">
      <button class="btn btn-primary ml-3" type="submit">Add New</button>
    </div>
  </form>
  <br>

  <form class="add-form_burger form-inline">
    <div class="form-group mb-2">
      <input class="form-control" type="text" name="burger_name" id="burger_name" placeholder="Burger Name">

      {{> options-block}}

      <button class="btn btn-primary ml-3" type="submit">Add</button>
    </div>
  </form>
  <br>
</div>

<div class="col-6">
  <h2>To Eat</h2>
  <br>

  <ul class="list-group list-group-flush">
    {{#each burgers}}
    {{#unless eaten}}
    <li class="list-group-item">

      <button class="update-eaten btn btn-primary btn-sm mr-3" data-id="{{id}}" data-eaten_update="true">Eat
        It</button>

      {{burger_name}} | {{Restaurant.restaurant_name}}

      <button type="button" class="close delete-item" data-id="{{id}}" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>

    </li>

    {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="col-6">
  <h2>Eaten</h2>
  <br>

  <ul class="list-group list-group-flush">
    {{#each burgers}}
    {{#if eaten}}
    <li class="list-group-item">

      {{burger_name}} | {{Restaurant.restaurant_name}}

      <button type="button" class="close delete-item" data-id="{{id}}" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>

    </li>
    {{/if}}
    {{/each}}
  </ul>
</div>